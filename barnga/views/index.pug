extends layout

block content
  script(src="/socket.io/socket.io.js")
  script(src="/javascripts/index.js")
  h1= title
  h2 Join Game
  label(for='name') Nickname
  br
  input#name.text_input(type='text', name='name')
  br
  label(for='gameIdInput') Game Code
  br
  input#gameIdInput.text_input(type='text', name='gameId')
  br
  button#joinGame.enter_button(onclick="window.joinGame()") Join game!
  br
  if error
    p#error Error joining game.
    br
  br
  div#gameCreation
    h3 Create Game
    label(for='numberOfCards') Number of Cards per Player
    br
    input#numberOfCards.text_input(type='number', min='1', max='52', name='numberOfCards')
    br
    label(for='filterNames') Filter inappropriate names?
    br
    input#gameFilter.checkbox_input(type='checkbox', name='filterNames')
    br
    button#createGame.enter_button(onclick="window.createGame()") Create game!
